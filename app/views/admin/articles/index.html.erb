<p id="title"><i>Admin articles</i></p>
<table>
  <tr id="none">
    <th>lp</th>
    <th>id</th>
    <th>publish</th>
    <th>title</th>
    <th colspan="3">actions</th>
  </tr>
  <% l=0 %>
  <% @articles.each do |article| %>
  <tr>
    <td><%= l+=1 %></td>
    <td><%= article.id %></td>
    <td><%= article.publish? %></td>
    <td><%= article.title %></td>
    <td><%= link_to("Pokaż", admin_article_path(article)) %></td>
    <td><%= link_to("Edytuj", edit_admin_article_path(article))%></td>
    <td><%= link_to "Usuń", [:admin, article], :confirm => 'TAK?', :method => :delete %></td>
  </tr>
  <% end %>
</table>
<%= link_to("Dodaj Artykuł", new_admin_article_path)%>